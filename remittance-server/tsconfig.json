{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node14/tsconfig.json",
    "ts-node": { "files": true },
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.spec.ts"]
}
